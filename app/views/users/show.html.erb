<main>
  <%= flash[:notice] %>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">

      <%= render 'books/list', books: @books %>

      <div class="col-md-8 offset-md-1">
      <h2>Books</h2>

        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td><div class="attachment user profile_image"><%= image_tag @user.get_image %></div></td>
              <td><%= link_to book_path(current_user) do %><%= book.title %><% end %></td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</main>
