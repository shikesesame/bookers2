<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/f430861f89.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">

          <a class="navbar-brand" href="/"><span>Bookers</span></a>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li class="nav-item mr-3"><%= link_to users_path do %><i class="fas fa-home text-light"></i><span class="text-light">Home</span><% end %></li>
                <li class="nav-item mr-3"><%= link_to users_path do %><i class="fa-solid fa-users text-light"></i><span class="text-light">Users</span><% end %></li>
                <li class="nav-item mr-3"><%= link_to books_path do %><i class="fa-solid fa-book-open text-light"></i><span class="text-light">Books</span><% end %></li>
                <li class=><%= link_to destroy_user_session_path, method: :delete do %><i class="fa-solid fa-right-from-bracket text-light"></i><span class="text-light">Log out</span><% end %></li>
              <% else %>
                <li class="nav-item mr-3"><%= link_to root_path do %><i class="fas fa-home text-light"></i><span class="text-light">Home</span><% end %></li>
                <li class="nav-item mr-3"><%= link_to about_path do %><i class="fas fa-paperclip text-light"></i><span class="text-light">About</span><% end %></li>
                <li class="nav-item mr-3"><%= link_to new_user_registration_path do %><i class="fas fa-user-plus text-light"></i><span class="text-light">Sign up</span><% end %></li>
                <li class="nav-item"><%= link_to new_user_session_path do %><i class="fas fa-sign-in-alt text-light"></i><span class="text-light">Log in</span><% end %></li>
              <% end %>
            </ul>
          </div>

        </div>
      </nav>
    </header>
    <%= yield %>
  </body>

  <footer>
    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>
</html>
